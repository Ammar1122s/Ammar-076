<div class="cart-main" style="margin-top: 120px;">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for( let index = 0; index < cart_pro.length; index++ ) { %>
                <tr>
                    <td><%= cart_pro[index].name %></td>
                    <td><%= cart_pro[index].price %>$</td>
                    <td><img style="width: 100px;" src="<%= cart_pro[index].path %>" alt=""></td>
                    <td><a href="/deals/remove-from-cart/<%= cart_pro[index]._id %>" class="btn btn-danger">Remove</a></td>
                    
                </tr>
            <% } %>
           
    
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <th><%= total %>$ </th>
            </tr>
        </tfoot>
    </table>


</div>

