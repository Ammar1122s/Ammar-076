<div class="cart-main" style="margin-top: 120px;">
    <h1>Remove the User Accounts</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for( let index = 0; index < users.length; index++ ) {
                
                if (users[index].role.includes("admin")) { %>
                    <tr>
                    <td><%= users[index].name %> : Admin Account</td>
                    <td><%= users[index].email %></td>
                    
                </tr>
                    
               <% }
                else{
                %>

                <tr>
                    <td><%= users[index].name %></td>
                    <td><%= users[index].email %></td>
                    <td><a href="/admin/remove/<%= users[index]._id %>" class="btn btn-danger">Remove</a></td>
                    
                </tr>
            <%} } %>
           
    
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <th>Admin </th>
            </tr>
        </tfoot>
    </table>


</div>

