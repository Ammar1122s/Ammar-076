<div class="cart-main" style="margin-top: 120px;">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Ingredients</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for( let index = 0; index < recepies.length; index++ ) { %>
                <tr>
                    <td><%= recepies[index].title %></td>
                    <td><%= recepies[index].content %></td>
                    <td><%= recepies[index].ingredients %></td>
                    <td><a href="/remove/<%= recepies[index]._id %>" class="btn btn-danger">Remove</a></td>
                    
                </tr>
            <% } %>

            <% if (recepies.length == 0) {%>

                <tr>
                    <td>0 Recepie Present</td>

                </tr>

                
          <%  } %>
           
    
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <th><a href="/add" class="btn btn-danger">Add more</a> </th>
            </tr>
        </tfoot>
    </table>


</div>

